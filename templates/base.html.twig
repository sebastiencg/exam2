<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    <ul class="nav nav-pills nav-fill gap-2 p-1 small bg-primary rounded-5 shadow-sm" id="pillNav2" role="tablist" style="--bs-nav-link-color: var(--bs-white); --bs-nav-pills-link-active-color: var(--bs-primary); --bs-nav-pills-link-active-bg: var(--bs-white);">
        <li class="nav-item" role="presentation">
            <a href="{{ path('app_home') }}" style="text-decoration: none">
                <button class="nav-link active rounded-5" id="home-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="true">Home</button>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a href="{{ path('app_my_quote') }}" style="text-decoration: none">
                <button class="nav-link rounded-5" id="profile-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">my quote</button>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" style="text-decoration: none">
                    <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Logout</button>
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" style="text-decoration: none">
                    <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Login</button>
                </a>
            {% endif %}
        </li>
        {% if app.user %}

            {% if "ROLE_ADMIN" in app.user.roles %}
                <li class="nav-item" role="presentation">
                    <a href="{{ path('app_user_index') }}" style="text-decoration: none">
                        <button class="nav-link rounded-5" id="profile-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">admin</button>
                    </a>
                </li>
            {% endif %}
        {% endif %}
    </ul>
    <div class="container">
        {% block body %}
        {% endblock %}
    </div>
    </body>
</html>
